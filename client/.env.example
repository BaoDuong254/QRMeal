NODE_ENV=development
PORT=4007

# Frontend URL - exposed to client
NEXT_PUBLIC_URL=http://localhost:4007

# API Endpoint - Empty means direct API calls (nginx will proxy)
NEXT_PUBLIC_API_ENDPOINT=http://localhost:4008

# Server-side API Endpoint - used only on server side
SERVER_API_ENDPOINT=http://localhost:4008

# Socket.IO Endpoint
NEXT_PUBLIC_SOCKET_URL=http://localhost:4007

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GOOGLE_AUTHORIZED_REDIRECT_URI=http://localhost:4008/auth/login/google
